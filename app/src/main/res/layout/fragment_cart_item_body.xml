<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout_cart_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    tools:context=".member.MemberOrdersDetailedInfoFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/textView_cart_body_delete"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkBox_cart_body_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="18dp"
            android:checked="false" />

        <ImageView
            android:id="@+id/imageView_cardview_member_orders_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="18dp"
            app:srcCompat="@drawable/inpods_demo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_car_body_goodsName"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingStart="10dp"
                android:singleLine="true" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="4dp">

                <TextView
                    android:id="@+id/textView_cart_body_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cart_goods_type"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    android:text="1入"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="4dp">

                <TextView
                    android:id="@+id/textView133"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="@color/Mycolor_1"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_cart_body_goodsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="0"
                    android:textColor="@color/Mycolor_1"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/textView133"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="4dp">

                <TextView
                    android:id="@+id/textView_cart_body_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cart_goods_add"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    android:text="－"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_cart_goodsSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="4dp"
                    android:text="0"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView_cart_body_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cart_goods_add"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    android:text="＋"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_cart_body_delete"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginVertical="4dp"
        android:background="@color/Mycolor_1"
        android:gravity="center"
        android:text="刪除"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>