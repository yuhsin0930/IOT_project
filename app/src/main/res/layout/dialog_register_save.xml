<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_corner">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="240dp"
        android:paddingStart="26dp"
        android:paddingTop="26dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="資料將被修改！"
            android:textColor="@color/font_color"
            android:textSize="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="確定修改，請先輸入原密碼："
            android:textSize="16dp" />

        <Button
            android:id="@+id/button_register_save_dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="130dp"
            android:backgroundTint="@color/Mycolor_1"
            android:paddingVertical="8dp"
            android:text="修改"
            android:textIsSelectable="false"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_register_save_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/Mycolor_4"
            android:paddingVertical="8dp"
            android:text="不儲存離開"
            android:textColor="@color/font_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView_register_save_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:alpha="0.4"
            app:srcCompat="@drawable/outline_close_black_18" />

        <EditText
            android:id="@+id/editText_register_save_dialog_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:inputType="textPassword" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>