<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView_login_back"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/orangebackarrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_centerInParent="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="登入"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="5dp"
                android:background="#C8C6C6" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="20dp"
                app:srcCompat="@drawable/gifticon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="40dp"
                android:paddingTop="6dp"
                android:paddingBottom="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/outline_person_black_18" />

                <EditText
                    android:id="@+id/editText_login_account"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:hint="帳號"
                    android:paddingStart="12dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:textSize="18dp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="#33000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="40dp"
                android:paddingTop="6dp"
                android:paddingBottom="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/outline_lock_open_black_18" />

                <EditText
                    android:id="@+id/editText_login_password"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:hint="密碼"
                    android:inputType="textPassword"
                    android:paddingStart="12dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:textSize="18dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/imageView_login_eyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/outline_visibility_off_black_18" />

                <View
                    android:id="@+id/view"
                    android:layout_width="1.5dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="3dp"
                    android:background="#33000000" />

                <TextView
                    android:id="@+id/textView_login_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘記了嗎？"
                    android:textColor="#168AC8"
                    android:textSize="18dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="#33000000" />

            <Button
                android:id="@+id/button_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="@color/Mycolor_1"
                android:paddingVertical="12dp"
                android:text="登入"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="#ffff"
                    android:text="註冊"
                    android:textColor="#168AC8"
                    android:textSize="18dp" />

            </RelativeLayout>

