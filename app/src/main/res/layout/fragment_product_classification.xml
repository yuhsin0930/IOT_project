<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout_productClassification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProduct.ProductClassificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinner_productClass"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:entries="@array/productClass"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <Switch
            android:id="@+id/switch_openProductClass"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textOff="停用"
            android:textOn="啟用"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/imageButton_deleteClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/outline_delete_black_24"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>